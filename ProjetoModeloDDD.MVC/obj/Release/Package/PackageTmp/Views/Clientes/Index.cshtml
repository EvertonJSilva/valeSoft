@model IEnumerable<ProjetoModeloDDD.MVC.ViewModels.ClienteViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<p>
    @Html.ActionLink("Clientes Especiais", "Especiais")
</p>
<table class="table table-bordered table-striped table-condensed" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sobrenome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>

        <td>
            <button class="btn btn-success btn-xs" onclick="location.href='@Url.Action("Details", "Clientes", new { id = item.ClienteId })'"><i class="fa fa-check"></i></button>
            <button class="btn btn-primary btn-xs" onclick="location.href='@Url.Action("Edit", "Clientes", new { id = item.ClienteId })'"><i class="fa fa-pencil"></i></button>
            <button class="btn btn-danger btn-xs" onclick="location.href='@Url.Action("Delete", "Clientes", new { id = item.ClienteId })'"><i class="fa fa-trash-o "></i></button>       
        </td>
    </tr>
    
}

</
    >


